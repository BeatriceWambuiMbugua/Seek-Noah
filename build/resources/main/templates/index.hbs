{{#partial "content"}}
<!--    <div class="data-image">-->
<!--    </div>-->
    <div class="container" id="data">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    {{#if sightings}}
                        {{#each sightings}}
                            <p>{{speciesName}}</p>
                            <a href="/sightings/{{id}}" class="btn btn-success">Information</a>
                        {{/each}}
                    {{/if}}
                </div>
                <div class="col-md-4">
                    {{#if rangers}}
                        {{#each rangers}}
                            <p>{{rangerName}}</p>
                            <a href="/rangers/{{id}}" class="btn btn-success">Information</a>
                        {{/each}}
                    {{/if}}
                </div>
                <div class="col-md-6">
                    {{#if locations}}
                    {{#each locations}}
                        <p>{{locationName}}</p>
                        <a href="/locations/{{id}}" class="btn btn-success">Information</a>
                    {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
{{/partial}}
